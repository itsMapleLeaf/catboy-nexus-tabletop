{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["typecheck", "convex dev", "remix dev"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "typecheck",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"group": "build"
		},
		{
			"label": "convex dev",
			"type": "npm",
			"script": "dev:convex",
			"isBackground": true
		},
		{
			"label": "remix dev",
			"type": "npm",
			"script": "dev:remix",
			"isBackground": true
		}
	]
}
