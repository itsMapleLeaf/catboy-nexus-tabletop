{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"files": {
		"ignore": ["convex/_generated"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off"
			},
			"nursery": {
				"useImportType": "error"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
