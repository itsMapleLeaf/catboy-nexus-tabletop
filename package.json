{
	"name": "catboy-nexus-tabletop",
	"type": "module",
	"engines": {
		"node": "20"
	},
	"packageManager": "pnpm@8.15.1",
	"scripts": {
		"dev": "run-p --race dev:*",
		"dev:remix": "remix vite:dev",
		"dev:convex": "convex dev",
		"build": "remix vite:build",
		"serve": "dotenv -v PORT=5173 -- remix-serve ./build/server/index.js",
		"preview": "pnpm build && pnpm serve",
		"lint": "biome check .",
		"format": "run-s --continue-on-error biome-apply prettier-write",
		"format-unsafe": "run-s --continue-on-error biome-apply-unsafe prettier-write",
		"prettier-write": "prettier . --write",
		"biome-apply": "biome check . --apply",
		"biome-apply-unsafe": "biome check . --apply-unsafe",
		"test": "playwright test",
		"test-ui": "playwright test --ui"
	},
	"dependencies": {
		"@ariakit/react": "0.4.1",
		"@clerk/remix": "3.1.18",
		"@clerk/themes": "1.7.9",
		"@fontsource/barlow": "5.0.8",
		"@radix-ui/react-scroll-area": "1.0.5",
		"@remix-run/node": "2.6.0",
		"@remix-run/react": "2.6.0",
		"@remix-run/serve": "2.6.0",
		"@tw-classed/react": "1.7.0",
		"@vercel/remix": "2.6.0",
		"@vercel/speed-insights": "1.0.10",
		"convex-helpers": "0.1.19",
		"date-fns": "3.3.1",
		"isbot": "5.1.0",
		"lucide-react": "0.331.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hot-toast": "2.4.1",
		"react-virtuoso": "4.6.3",
		"remix-routes": "1.7.2",
		"spin-delay": "1.2.0",
		"svix": "1.18.0",
		"tailwind-merge": "2.2.1",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@playwright/test": "1.41.2",
		"@remix-run/dev": "2.6.0",
		"@tailwindcss/container-queries": "0.1.1",
		"@types/node": "20.11.19",
		"@types/react": "18.2.55",
		"@types/react-dom": "18.2.19",
		"@vitejs/plugin-react-swc": "3.6.0",
		"autoprefixer": "10.4.17",
		"convex": "1.9.0",
		"dotenv-cli": "7.3.0",
		"lightningcss": "1.23.0",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.35",
		"prettier": "3.2.5",
		"prettier-plugin-jsdoc": "1.3.0",
		"prettier-plugin-tailwindcss": "0.5.11",
		"remix-development-tools": "3.7.4",
		"tailwindcss": "3.4.1",
		"tailwindcss-animate": "1.0.7",
		"typescript": "5.3.3",
		"vite": "5.1.3",
		"vite-tsconfig-paths": "4.3.1"
	}
}
